---
// Footer - Simple footer with branding and links
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <!-- Brand -->
      <div class="brand">
        <div class="logo">
          <img src="/logo-dark.png" alt="OTA Independence" class="logo-img" />
        </div>
        <p class="tagline">
          Helping independent hotels reclaim their margins and guest relationships.
        </p>
      </div>

      <!-- Links -->
      <nav class="footer-nav">
        <a href="#how-it-works">How It Works</a>
        <a href="#guarantee">Guarantee</a>
        <a href="#faq">FAQ</a>
        <a href="#apply">Apply Now</a>
      </nav>
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} Furum Consulting. All rights reserved.
      </p>
      <p class="legal">
        <a href="/privacy">Privacy Policy</a>
        <span class="separator">Â·</span>
        <a href="/terms">Terms of Service</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 2rem;
    background: hsl(var(--charcoal));
    color: hsl(var(--cream));
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid hsl(var(--cream) / 0.1);
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  /* Brand */
  .brand {
    max-width: 20rem;
  }

  .logo {
    display: inline-block;
  }

  .logo-img {
    height: 7rem;
    width: auto;
    object-fit: contain;
    object-position: left center;
  }

  @media (min-width: 768px) {
    .logo-img {
      height: 9rem;
    }
  }

  .tagline {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: hsl(var(--cream) / 0.7);
    line-height: 1.6;
  }

  /* Navigation */
  .footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-nav a {
    font-size: 0.875rem;
    color: hsl(var(--cream) / 0.7);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-nav a:hover {
    color: hsl(var(--gold));
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 2rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .copyright {
    font-size: 0.75rem;
    color: hsl(var(--cream) / 0.5);
  }

  .legal {
    font-size: 0.75rem;
    color: hsl(var(--cream) / 0.5);
  }

  .legal a {
    color: hsl(var(--cream) / 0.5);
    text-decoration: none;
    transition: color 0.2s;
  }

  .legal a:hover {
    color: hsl(var(--cream) / 0.8);
  }

  .separator {
    margin: 0 0.5rem;
  }
</style>
