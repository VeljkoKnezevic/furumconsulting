<style>
  .how-it-works-section {
    padding: 5rem 0;
    background: hsl(var(--background));
  }

  @media (min-width: 768px) {
    .how-it-works-section {
      padding: 8rem 0;
    }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .content-wrapper {
    max-width: 72rem;
    margin: 0 auto;
  }

  /* Section header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-family: var(--font-serif, Georgia, serif);
    font-size: clamp(1.875rem, 4vw, 3rem);
    font-weight: 700;
    color: hsl(var(--foreground));
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.125rem;
    color: hsl(var(--muted-foreground));
    max-width: 42rem;
    margin: 0 auto;
  }

  /* Phases grid */
  .phases-grid {
    display: grid;
    gap: 2rem;
    align-items: stretch;
  }

  @media (min-width: 1024px) {
    .phases-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Phase card */
  .phase-card {
    border-radius: 1rem;
    border: 1px solid hsl(var(--forest));
    background: hsl(var(--forest) / 0.05);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .phase-card {
      padding: 2rem;
    }
  }

  /* Phase badge */
  .phase-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
    width: fit-content;
    background: hsl(var(--forest));
    color: hsl(var(--primary-foreground));
  }

  /* Card title */
  .phase-card h3 {
    font-family: var(--font-serif, Georgia, serif);
    font-size: clamp(1.5rem, 3vw, 1.875rem);
    font-weight: 700;
    color: hsl(var(--foreground));
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .phase-subtitle {
    color: hsl(var(--muted-foreground));
    margin-bottom: 2rem;
  }

  /* Deliverables grid */
  .deliverables-grid {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
    flex: 1;
  }

  @media (min-width: 640px) {
    .deliverables-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .deliverable {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 0.5rem;
    background: hsl(var(--background) / 0.5);
  }

  .deliverable-icon {
    width: 2rem;
    height: 2rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: hsl(var(--forest) / 0.1);
    color: hsl(var(--forest));
  }

  .deliverable-title {
    font-weight: 500;
    font-size: 0.875rem;
    color: hsl(var(--foreground));
    line-height: 1.3;
  }

  .deliverable-desc {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.4;
  }

  /* Outcome */
  .outcome {
    padding: 1rem;
    border-radius: 0.75rem;
    background: hsl(var(--forest) / 0.1);
    border: 1px solid hsl(var(--forest) / 0.2);
  }

  .outcome-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    margin-bottom: 0.25rem;
  }

  .outcome-text {
    font-family: var(--font-serif, Georgia, serif);
    font-size: 1.125rem;
    color: hsl(var(--foreground));
    line-height: 1.4;
  }
</style>
