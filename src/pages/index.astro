---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import HeroSection from '../components/landing/HeroSection.astro';
import ProblemSection from '../components/landing/ProblemSection.astro';
import SolutionSection from '../components/landing/SolutionSection.astro';
import HowItWorksSection from '../components/landing/HowItWorksSection.astro';
import GuaranteeSection from '../components/landing/GuaranteeSection.astro';
import QualificationSection from '../components/landing/QualificationSection.astro';
import TransformationSection from '../components/landing/TransformationSection.astro';
import FAQSection from '../components/landing/FAQSection.astro';
import CTASection from '../components/landing/CTASection.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<HeroSection />
			<ProblemSection />
			<SolutionSection />
			<HowItWorksSection />
			<GuaranteeSection />
			<QualificationSection />
			<TransformationSection />
			<CTASection />
			<FAQSection />
		</main>
		<Footer />
	</body>
</html>
